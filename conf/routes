# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET     /                           controllers.HomeController.rummi
GET     /about                      controllers.HomeController.about
GET     /sorted                     controllers.HomeController.rummiSorted
GET     /draw                       controllers.HomeController.newTile
GET     /switchPlayer               controllers.HomeController.switchPlayer
#GET     /move/:from/:to             controllers.HomeController.moveTile(from, to)
GET     /undo                       controllers.HomeController.undoStep
GET     /redo                       controllers.HomeController.redoStep
GET     /moveTile/*command          controllers.HomeController.moveTile(command)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
